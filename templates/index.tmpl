{{define "title"}}sorcia{{end}}
{{define "content"}}
<main class="container git">
    <div class="container__info">
        <div class="container__info__top">
            <p>Welcome back, mysticmode! This is the sorcia git hosting service.</p>
            <a href="/create-repo" class="button button--primary">Create new repository</a>
        </div>
    </div>
    <div class="git__repos">
        <div class="git__repos__search">
            <input type="text" placeholder="Search for repositories.." />
            <button class="button button--primary">Search</button>
        </div>
        <ul class="repos">
            {{range .Repos.Repositories}}
            <li>
                <a href="/+{{$.Username}}/{{.Name}}">+{{$.Username}} / {{.Name}} {{if eq .IsPrivate "true"}} <i>private</i>{{end}}</a>
                <p>{{.Description}}</p>
            </li>
            {{end}}
        </ul>
    </div>
</main>
{{end}}